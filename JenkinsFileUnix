                // }
            }
        }
        stage('Deploy Backend to Tomcat') {
            steps {
                echo 'Simulating Backend Deployment to Tomcat...'
                script {
                    // Si quieres que Jenkins actúe como si hubiera hecho el despliegue
                    // def warFile = 'api_citas/target/api_citas.war'
                    // def tomcatWebapps = '/home/$USER/tomcat/webapps'
                    
                    // Este es solo un ejemplo de lo que ocurriría si realmente copiaras el archivo WAR
                    // sh "cp ${warFile} ${tomcatWebapps}"
                    
                    // Simular reinicio de Tomcat
                    // sh '/home/$USER/tomcat/bin/shutdown.sh'
                    // sh '/home/$USER/tomcat/bin/startup.sh'
                    echo 'Tomcat restarted (simulation)'
                }
            }
        }
        stage('Build Frontend') {
            steps {
                // dir('app_citas') {
                //     echo 'Building Angular Application...'
                //     sh 'npm install'
                //     sh 'npm run build --prod'
                // }
            }
        }
        stage('Restart Nginx') {
            steps {
                // Para que nginx no de error en el reinicio, hay que moverse primero a la carpeta de instalación
