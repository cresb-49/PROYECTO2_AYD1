pipeline {
    agent any
    stages {
        stage('Prepare Workspace') {
            steps {
                script {
                    def userHome = "/home/${env.USER}"
                    def repoDir = "${userHome}/PROYECTO2_AYD1"
                    
                    echo "Verificando si el directorio ${repoDir} existe..."
                    sh """
                        if [ ! -d "${repoDir}" ]; then
                            mkdir -p "${repoDir}"
                            echo "Directorio ${repoDir} creado."
                        else
                            echo "Directorio ${repoDir} ya existe."
                        fi
                    """
                }
            }
        }
        stage('Checkout') {
            steps {
                dir("/home/${env.USER}/PROYECTO2_AYD1") {
                    git branch: 'main', url: 'https://github.com/cresb-49/PROYECTO2_AYD1.git'
                }
            }
        }
        stage('Build Backend') {
            steps {
                echo 'Simulating Spring Boot Application build...'
